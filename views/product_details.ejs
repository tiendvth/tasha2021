<!doctype html>

<html>

<head>
    <link rel="icon" href="/admin/images/favicon (2).ico" type="image/ico" />
    <title>TASHA Store | Product Details</title>
    <link href="https://fonts.googleapis.com/css?family=Cairo:200,300,400,600,700,900|Josefin+Sans:100,100i,300,300i,400,400i,600,600i,700,700i"
          rel="stylesheet">
    <link rel="stylesheet" href="/fontawesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/owl-carousel/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="/owl-carousel/assets/owl.theme.default.css">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/general.css">
    <link rel="stylesheet" href="/css/product_detail.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/header.css">
</head>
<body>
<!--start of img heading section-->
<%-include('partial/header')%>
<!--END HEADER SECTION-->
<div class="small-container single-product">
    <div class="row">
        <div class="col-2">
            <%{const arrayImage = data.detail.thumbnails.split(',');%>
            <img src="<%=arrayImage[0]%>" width="100%" height="400px" id="product-img">
            <div class="small-img-row">
                <%if(arrayImage[0] == null){%>
                <%}else {%>
                <div class="small-img-col">
                    <img src="<%=arrayImage[0]%>" class="small-img">
                </div>
                <%}%>
                <%if(arrayImage[1] == null){%>
                <%}else {%>
                <div class="small-img-col">
                    <img src="<%=arrayImage[1]%>" class="small-img">
                </div>
                <%}%>
                <%if(arrayImage[2] == null){%>
                <%}else {%>
                <div class="small-img-col">
                    <img src="<%=arrayImage[2]%>" class="small-img">
                </div>
                <%}%>
                <%if(arrayImage[3] == null){%>
                <%}else {%>
                <div class="small-img-col">
                    <img src="<%=arrayImage[3]%>" class="small-img">
                </div>
                <%}%>
            </div>
            <%}%>
        </div>
        <div class="col-2">
            <h2><%=data.detail.title%></h2>
            <div class="rating">
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star-o"></i>
            </div>
            <h4><%=data.detail.price%>$</h4>
            <input type="number" value="1">

            <div>
                <a href="" class="btn btn-detail">Buy</a>
                <a href="" class="btn btn-detail">Add To Cart <i class="fa fa-shopping-cart"></i></a></div>
            <br>
            <br>
            <br>
            <p><button class="btn btn-primary" id="show">Product Description</button></p>
            <p style="display: none" id="content"><%=data.detail.description%></p>



        </div>
    </div>
</div>
<!--FOOTER SECTION-->
<%-include('partial/footer')%>
<!--END OF FOOTER SECTION-->
<script src="/js/jquery.min.js"></script>
<script src="/owl-carousel/owl.carousel.min.js"></script>
<script src="/bootstrap/js/bootstrap.min.js"></script>
<script src="/js/product_detail.js"></script>
<script>
    document.getElementById("show").onclick = function () {
        document.getElementById("content").style.display = 'block';
    };
</script>
</body>

</html>
