</head>
<body>
<!--START OF HEADER SECTION-->
<%-include('partial/header')%>
<!--END OF HEADER SECTION-->
<!--START OF HOME SECTION-->
<section>
    <div class="row1">
        <div class="col-md-7">
            <h2 class="text-center">Feedback Form</h2>
            <p class="text-center">We would love to hear your thoughts, suggestions, concerns or problems with anything so we can improve!</p>
            <div>
                <form action="/post/message/feedback" method="post" class="text-center" id="validate-form">
                    <div class="row">
                        <div class="col-md-6"> <input type="text" class="" placeholder="Your FirstName..." name="firstname"></div>
                        <div class="col-md-6"><input type="text" class="" placeholder="Your LastName..." name="lastname"></div>
                    </div>
                    <input type="email" class="" placeholder="Your Email..." name="email">
                    <textarea placeholder="Your FeedBack..." cols="30" rows="10" name="content"></textarea>
                    <div class="row">
                        <div class="col-md-12">
                            <button class="text-center btn btn-submit">Send</button>
                        </div>
                    </div>



                </form>
            </div>
        </div>
    </div>

</section>

<!--END OF HOME SECTION-->

<!--START OF FOOTER SECTION-->
<%-include('partial/footer')%>
<!--END OF FOOTER SECTION-->
