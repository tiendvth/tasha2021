<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="/admin/images/favicon (2).ico" type="image/ico" />
    <title>TASHA Store | Expert Tip Detail</title>
    <!--FONT AWESOME-->
    <link rel="stylesheet" href="/fontawesome/css/font-awesome.min.css">


    <!--FONTS-->
    <link href="https://fonts.googleapis.com/css?family=Cairo:300,400,700|Josefin+Sans:300i,400,400i,600,700"
          rel="stylesheet">

    <!--Owl Carousel-->
    <link rel="stylesheet" href="/owl-carousel/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="/owl-carousel/assets/owl.theme.green.min.css">

    <!--BOOTSTRAP CSS-->
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">

    <!--OUR CSS-->
    <link rel="stylesheet" href="/css/general.css">
    <link rel="stylesheet" href="/css/Expert_tips.css">

    <!--FOOTER CSS-->
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/header.css">

</head>
<body>
<!--START OF HEADER SECTION-->
<%- include('partial/header') %>
<!--END OF HEADER SECTION-->
<!--START OF HOME SECTION-->
<section>
    <div class="row" style="padding-top: 20px;padding-bottom: 20px ">
        <div class="col-md-12">
            <div class="container" style="background-color: #f3f3f3;">
                <div class="row">
                    <div class="col-md-12" style="padding-bottom: 50px;text-align: center">
                        <h1 class="title2"><%=data.detailArticle.title%></h1>
                        <div class="divider"><span class="fa fa-cutlery"></span></div>
                    </div>
                    <%{ const arrayImg = data.detailArticle.thumbnails.split(',')%>
                    <div class="col-md-4" style="text-align: center"><img width="300px" height="200px" style="border: 3px #6F5CF3 solid" src="<%=arrayImg[0]%>" alt=""></div>
                    <div class="col-md-4" style="text-align: center"><img width="300px" height="200px" style="border: 3px #6F5CF3 solid" src="<%=arrayImg[1]%>" alt=""></div>
                    <div class="col-md-4" style="text-align: center"><img width="300px" height="200px" style="border: 3px #6F5CF3 solid" src="<%=arrayImg[2]%>" alt=""></div>

                    <div class="col-md-12" style="padding-top: 50px">
                        <p style="border-bottom: 2px double;border-top: 2px double;padding-top: 20px"><%=data.detailArticle.content%></p>
                    </div>
                    <div class="col-md-12" style="text-align: center">
                        <%if(arrayImg[3] == null){%>
                        <img src="/admin/images/user.png" alt="..." style="border-radius: 40px" height="75px" width="75px">
                        <%}else{%>
                        <img src="<%=arrayImg[3]%>" alt="..." style="border-radius: 40px" height="75px" width="75px">
                        <%}%>
                        <h4><%=data.detailArticle.author%></h4>
                        <p><%=data.detailArticle.description%></p>
                    </div>

                    <%}%>

                </div>

            </div>

        </div>
    </div>
</section>
<!--END OF HOME SECTION-->

<!--START OF FOOTER SECTION-->
<%- include('partial/footer') %>
<!--END OF FOOTER SECTION-->
<!--.jquery js-->
<script src="/js/jquery.min.js"></script>

<!--.bootstrap-->
<script src="/bootstrap/js/bootstrap.min.js"></script>

<!--owl carousel-->
<script src="/owl-carousel/owl.carousel.min.js"></script>

<!--Our JS-->
<script src="/js/home.js"></script>
</body>
</html>