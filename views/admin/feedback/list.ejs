<!DOCTYPE html>
<html lang="en">
<%-include('../partial/head')%>

<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <%-include('../partial/left-menu')%>
        <!-- top navigation -->
        <%-include('../partial/navbar')%>
        <!-- /top navigation -->

        <!-- page content -->
        <div class="right_col" role="main" style="min-height: 912px;">
            <div class="">
                <div class="page-title">
                    <div class="title_left">
                        <h3>List Feedback</h3>
                    </div>

                    <div class="title_right">
                        <div class="col-md-5 col-sm-5  form-group pull-right top_search">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search for...">
                                <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Go!</button>
                    </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="clearfix"></div>

                <div class="row">
                    <div class="x_panel">
                        <div class="x_content">
                            <div class="col-md-12 col-sm-12  text-center">
                            </div>

                            <div class="clearfix"></div>
                            <% for(var i = 0; i < data.listFeedback.length; i++) {
                            %>
                            <div class="col-md-4 col-sm-4  profile_details">
                                <div class="well profile_view">
                                    <div class="col-sm-12">
                                        <h4 class="brief"><i>Feedback Profile</i></h4>
                                        <div class="left col-md-7 col-sm-7">
                                            <h2><%=data.listFeedback[i].firstname +' '+ data.listFeedback[i].lastname%></h2>
                                            <p><strong><i class="fa fa-envelope-o"></i> Mail</strong> <%=data.listFeedback[i].email%></p>
                                            <p><strong><i class="fa fa-comment-o"></i> Message</strong> <%=data.listFeedback[i].content%></p>
                                        </div>
                                        <div class="right col-md-5 col-sm-5 text-center">
                                            <img src="/admin/images/user.png" alt="" class="img-circle img-fluid">
                                        </div>
                                    </div>
                                    <div class=" profile-bottom text-center">
                                        <div class=" col-sm-6 emphasis">
                                            <p class="ratings">
                                                <a>4.0</a>
                                                <a href="#"><span class="fa fa-star"></span></a>
                                                <a href="#"><span class="fa fa-star"></span></a>
                                                <a href="#"><span class="fa fa-star"></span></a>
                                                <a href="#"><span class="fa fa-star"></span></a>
                                                <a href="#"><span class="fa fa-star-o"></span></a>
                                            </p>
                                        </div>
                                        <div class=" col-sm-6 emphasis">
                                            <button type="button" class="btn btn-success btn-sm"> <i class="fa fa-user">
                                                </i> <i class="fa fa-comments-o"></i> </button>
                                            <a href="/admin/message/feedback/delete/<%= data.listFeedback[i]._id %>"
                                               onclick="return confirm('Bạn có chắc muốn xóa phản hồi này')">
                                                <button class="btn btn-danger"><i class="fa fa-trash"></i>
                                                </button>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <%}%>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->

        <!-- footer content -->
        <%-include('../partial/footer')%>
        <!-- /footer content -->
    </div>
</div>

<%-include('../partial/script')%>
</body>
</html>
